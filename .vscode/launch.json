{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": [
                "--loader",
                "ts-node/esm",
                ".",
                "--resolveJsonModule"
            ],
            "sourceMaps": true,
            "program": "${workspaceFolder}/src/index.ts",
            "outFiles": ["${workspaceFolder}/**/*.js"]
        }
    ]
}
